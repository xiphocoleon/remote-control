/*
   1 - GND
   2 - VCC 3.3V !!! NOT 5V
   3 - CE to Arduino pin 9
   4 - CSN to Arduino pin 10
   5 - SCK to Arduino pin 13
   6 - MOSI to Arduino pin 11
   7 - MISO to Arduino pin 12
   8 - UNUSED
   
 - V1.00 11/26/13
   Based on examples at http://www.bajdi.com/
   Questions: terry@yourduino.com */

/*-----( Libraries )-----*/
#include <SPI.h>
#include <nRF24L01.h>
#include <RF24.h>
/*-----( Declare Constants and Pin Numbers )-----*/

//Indicators
#define RX_LED 2

//Laser
#define LASER 4

//nRF24L01+ pins
#define CE_PIN   9
#define CSN_PIN 10

// NOTE: the "LL" at the end of the constant is "LongLong" type
const uint64_t pipe = 0xE8E8F0F0E1LL; // Define the transmit pipe


/*-----( Declare objects )-----*/
RF24 radio(CE_PIN, CSN_PIN); // Create a Radio
/*-----( Declare Variables )-----*/
int joystick[2];  // 2 element array holding Joystick readings
bool laserSwitch[1]; // 1 element array holding laser switch status 

void setup()   /****** SETUP: RUNS ONCE ******/
{
  pinMode(LASER, OUTPUT);  
  digitalWrite(RX_LED, LOW);
  digitalWrite(LASER, LOW);
  Serial.begin(9600);
  delay(1000);
  Serial.println("Nrf24L01 Receiver Starting");
  radio.begin();
  radio.openReadingPipe(1,pipe);
  radio.startListening();;
}//--(end setup )---


void loop()   /****** LOOP: RUNS CONSTANTLY ******/
{
  if ( radio.available() )
  {
    Serial.println("++++++++ BEGIN RADIO AVAIL. TEST +++++++++");
    digitalWrite(RX_LED, HIGH);
    // Read the data payload until we've received everything
    bool done = false;
    while (!done)
    {
      // Fetch the data payload
      done = radio.read( joystick, sizeof(joystick) );
      delay(10);
      done = radio.read( laserSwitch, sizeof(laserSwitch) );
      Serial.print("X = ");
      Serial.print(joystick[0]);
      Serial.print(" Y = ");      
      Serial.println(joystick[1]);
      Serial.print("The laser is: ");
      Serial.println(laserSwitch[0],BIN);

      
      if ( !laserSwitch[0] )    //IF LASER ON
      {
        Serial.println("Laser Switch is ON");
        digitalWrite(LASER, HIGH);
        delay(1000);
      }
      else    //ELSE TURN LASER OFF
      {
        digitalWrite(LASER, LOW);
      }
    }
  }
  else    //ELSE NO RADIO AVAILABLE, LED BLINKS
  {
      digitalWrite(RX_LED, LOW); 
      delay(100); 
      digitalWrite(RX_LED, HIGH);
      delay(100);
      digitalWrite(LASER, LOW);  
      Serial.println("No radio available");
  }

}//--(end main loop )---
